{
    "env": {
        "commonjs": true,
        "es2021": true,
        "browser":true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        // we only want do double quotes
        "quotes": ["error", "double"],
        // we want to force semicolons
        "semi": ["error", "always"],
        // we use 2 spaces to indent our code
        "indent": ["error", 2],
        // we want to avoid useless spaces
        "no-multi-spaces": ["error"],
        "linebreak-style": ["error", "windows"]
      }
}
